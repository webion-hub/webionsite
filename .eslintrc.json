{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": ["error", 2],
    "keyword-spacing": ["error"],
    "no-trailing-spaces": ["warn"],
    "no-whitespace-before-property": "error",
    "arrow-spacing": "error",
    "block-spacing": "error",
    "space-before-blocks": "error",
    "func-call-spacing": ["error", "never"],

    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],

    "comma-spacing": ["error", {
      "before": false,
      "after": true
    }],

    "comma-dangle": ["warn", {
      "arrays": "only-multiline",
      "objects": "always-multiline",
      "imports": "only-multiline",
      "exports": "only-multiline",
      "functions": "never"
    }],


    "comma-spacing": ["error", {
      "before": false,
      "after": true
    }],

    "comma-dangle": ["warn", {
      "arrays": "only-multiline",
      "objects": "always-multiline",
      "imports": "only-multiline",
      "exports": "only-multiline",
      "functions": "never"
    }],

    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_"
    }],

    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true,
      "mode": "strict"
    }],

    "lines-between-class-members": ["error", "always", {
      "exceptAfterSingleLine": true
    }],

    "newline-per-chained-call": ["error", {
      "ignoreChainWithDepth": 2
    }],

    "react/react-in-jsx-scope": "off",
    "react/display-name": "off",
    "react/prop-types": "off"
  }
}
